<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#ffffff"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".resetpassword">
    <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:ems="10"
            android:inputType="textEmailAddress" tools:text="Email" android:visibility="visible"
            android:textColor="#000"/>
    <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:background="#f3f"
            android:text="send_password_reset_email"
            android:textColor="@android:color/white"
            android:textStyle="bold" android:layout_alignParentBottom="true" android:layout_marginBottom="489dp"
            android:layout_marginTop="4dp" android:layout_below="@+id/et_email" android:visibility="visible"/>
        </RelativeLayout>