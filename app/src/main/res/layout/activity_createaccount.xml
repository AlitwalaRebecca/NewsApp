<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#ffffff"
tools:context=".Createaccount" android:visibility="visible">
        <EditText
                android:id="@+id/et_first_name"
                android:ems="10"
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_height="95dp"
                android:inputType="textPersonName" android:visibility="visible" android:text="Firstname"
                android:textColor="#000" android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.0"
                app:layout_constraintHorizontal_bias="0.0"/>
        <EditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_below="@id/et_first_name"
                android:ems="10"
                android:inputType="textPersonName" android:text="lastname"
                android:visibility="visible" android:textColor="#000" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/et_first_name"
                app:layout_constraintVertical_bias="0.033" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:id="@+id/et_email"
                android:ems="10"
                android:layout_below="@id/et_last_name"
                android:inputType="textEmailAddress" android:textColor="#000"
                tools:text="Email" android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/et_last_name"
                app:layout_constraintVertical_bias="0.048" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp" tools:visibility="visible"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/et_password"
                android:layout_below="@id/et_email"
                android:ems="10"
                android:inputType="textPassword" android:textColor="#000"
                tools:text="Password" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/et_email" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.0" tools:visibility="visible"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/btn_register"

                android:background="@color/colorAccent"
                android:text="Create Account"
                android:textColor="#000000"
                android:textStyle="bold" android:layout_alignParentBottom="true"
                android:layout_alignTop="@+id/et_first_name"
                android:layout_alignParentStart="true" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/et_password" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.313"/>
        </android.support.constraint.ConstraintLayout>