<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Home" android:visibility="visible">
    <EditText
            android:id="@+id/et_email"
            android:ems="10"
            android:textColor="#000000"
            android:hint="Email"
            android:inputType="textEmailAddress" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.317" app:layout_constraintVertical_bias="0.012"
            android:layout_height="65dp" android:layout_width="321dp" tools:text="Email" tools:visibility="visible"/>

    <EditText
            android:id="@+id/et_password"
            android:layout_below="@id/et_email"
            android:ems="10"
            android:textColor="#000000"
            android:hint="Password"
            android:inputType="textPassword" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/et_email" android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/et_email" app:layout_constraintHorizontal_bias="0.727"
            app:layout_constraintVertical_bias="0.174" android:layout_height="83dp" android:layout_width="382dp"
            tools:text="Password" tools:visibility="visible"/>
    <Button
            android:id="@+id/btn_login"

            android:layout_below="@id/et_password"
            android:background="#ffffff"
            android:textColor="#000000"
            android:text="login"
            android:textStyle="bold" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_height="99dp" android:layout_width="342dp"
            app:layout_constraintHorizontal_bias="0.333" app:layout_constraintVertical_bias="0.896"/>
    <TextView
            android:id="@+id/tv_forgot_password"
            android:clickable="true"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:text="Forgot Password?"
            android:textSize="20sp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_height="101dp" android:layout_width="345dp"
            app:layout_constraintHorizontal_bias="0.344" app:layout_constraintVertical_bias="0.635"/>
    <Button
            android:id="@+id/btn_register_account"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:textColor="#000000"
            android:text="create_act"
            android:textStyle="bold" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="@+id/et_email"
            android:layout_height="97dp" android:layout_width="349dp" app:layout_constraintHorizontal_bias="0.425"
            app:layout_constraintVertical_bias="0.38"/>

</android.support.constraint.ConstraintLayout>